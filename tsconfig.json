{
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "diagnostics": true,
    "downlevelIteration": false,
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "include": [
    "typings/**/*.d.ts",
    "src",
    "bin",
    "browser"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/typescript"
  ]
}
